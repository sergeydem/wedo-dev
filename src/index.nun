<!doctype html>
<html lang="ru">
<head>
    <title>Title</title>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="css/main.css">
    <script src="js/jquery.selectric.js"></script>
    <script src="js/bootstrap-formhelpers.min.js"></script>
    <link rel="shortcut icon" href="img/logo_fav.ico" type="image/x-icon">

</head>
<body>
<header>
    <div class="container header-items">
        <div class="row top-line align-items-center">
            <div class="col-6 col-md-5 item">
                <div class="logo">
                    <a href=""><img src="img/logo.png" alt="WeDo"></a>
                </div>
            </div>
            <div class="col-6 col-md-7 item">
                <div class="phone">
                    <p>{{ phone1 }}</p>
                    <p>{{ phone2 }}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="title-center">
                    <h1>{{ header_title }}</h1>
                </div>
            </div>
        </div>
        <div class="row wrap-btn align-items-center justify-content-center">
            <div class="col-12 col-xl-4">
                <div class="button">
                    <a href="#" data-toggle="modal" data-target="#myModal" class="btn-pink"
                       data-wipe="{{ btn1 }}">{{ btn1 }}</a>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="feature">
    <div class="container">
        <div class="row wrap-title justify-content-end">
            <div class="col-12 col-md-12 col-xl-11">
                <h2>{{title_feature}}</h2>
                <h2>{{descr_feature}}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="tabs">
                    {% for item in tabs %}
                    <div class="tab col-12 col-lg-5">
                        <button class="tab-toggle ">{{ item.title_tab }}</button>
                    </div>
                    <div class="content  col-12 col-lg-7">
                        <h3 class="heading">{{ item.title_tab_content }}</h3>
                        <p class="description">{{ item.descr_tab }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
<section id="cost">
    <div class="container">
        <div class="row wrap-title justify-content-end">
            <div class="col-12 col-md-12 col-xl-11">
                <h2>{{title_cost}}</h2>
                <h2>{{descr_cost}}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table">
                    <div class="table-container">
                        <div class="table-container-header">
                            <table class="table table-striped table-hover table-condensed table-bordered">
                                <thead>
                                <tr>
                                    <th>{{ table.title.name }}</th>
                                    <th>{{ table.title.first }}</th>
                                    <th>{{ table.title.second }}</th>
                                    <th>{{ table.title.third }}</th>
                                </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="table-container-body">
                            <table class="table table-hover table-condensed table-bordered">
                                <colgroup>
                                    <col></col>
                                    <col></col>
                                    <col></col>
                                    <col></col>
                                </colgroup>
                                <tbody>
                                {% for item in  table.body %}
                                    <tr>
                                        <td>{{ item.name }}</td>

                                        <td>
                                            {% if item.first_text  %}
                                                {{ item.first_text }}
                                            {% elseif item.first %}
                                                <div><i class="material-icons check-ico">done</i></div>
                                            {% else %}
                                                <div><i class="material-icons close-ico">close</i></div>
                                            {% endif %}
                                        </td>

                                        <td>
                                            {% if item.second_text  %}
                                                {{ item.second_text }}
                                            {% elseif item.second %}
                                                <div><i class="material-icons check-ico">done</i></div>
                                            {% else %}
                                                <div><i class="material-icons close-ico">close</i></div>
                                            {% endif %}
                                        </td>

                                        <td>
                                            {% if item.third_text  %}
                                                {{ item.third_text }}
                                            {% elseif item.third %}
                                                <div><i class="material-icons check-ico">done</i></div>
                                            {% else %}
                                                <div><i class="material-icons close-ico">close</i></div>
                                            {% endif %}
                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="table-container-footer">
                            <table class="table table-striped table-hover table-condensed table-bordered">
                                <tfoot>
                                <tr>
                                    <th>{{ table.footer.name }}</th>
                                    <th>
                                        <div class="price">
                                            {{ table.footer.first }}
                                        </div>
                                        <div class="wrap-btn">
                                            <div class="button">
                                                <a href="#" data-toggle="modal" data-target="#myModal" class="btn-pink"
                                                   data-wipe="{{ btn6 }}">{{ btn6 }}</a>
                                            </div>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="price">
                                            {{ table.footer.second }}
                                        </div>
                                        <div class="wrap-btn">
                                            <div class="button">
                                                <a href="#" data-toggle="modal" data-target="#myModal" class="btn-pink"
                                                   data-wipe="{{ btn6 }}">{{ btn6 }}</a>
                                            </div>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="price">
                                            {{ table.footer.third }}
                                        </div>
                                        <div class="wrap-btn">
                                            <div class="button">
                                                <a href="#" data-toggle="modal" data-target="#myModal" class="btn-pink"
                                                   data-wipe="{{ btn6 }}">{{ btn6 }}</a>
                                            </div>
                                        </div>
                                    </th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-7">
                <div class="options">
                    <div class="title-options">
                        <p>{{ title_options }}</p>
                    </div>
                    <form class="checkbox-form">
                        {% for item in options %}
                        <label for="{{ item.for }}" class="c-custom-check" data-toggle="tooltip" data-placement="bottom" title="Tooltip on bottom">
                            {{ item.label_option }}
                            <input required type="checkbox" id="{{ item.id }}">
                            <div class="c-custom-check__indicator"></div>
                        </label>
                        {% endfor %}
                    </form>
                </div>
            </div>
            <div class="col-12 col-lg-5">
                <div class="wrap-cost">
                    <div class="cost">
                        <div class="price">
                            <p>{{ title_total_cost }}</p>
                            <div class="total-price">$3100</div>
                        </div>
                        <div class="time">
                            <p>{{ title_total_time }}</p>
                            <div class="total-time">3 месяца</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row home-button">
            <div class="col-12">
                <div class="wrap-btn">
                    <div class="button">
                        <a href="#" data-toggle="modal" data-target="#myModal" class="btn-pink"
                           data-wipe="{{ btn2 }}">{{ btn2 }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="why-us">
    <div class="container">
        <div class="row wrap-title justify-content-end">
            <div class="col-12 col-md-12 col-xl-11">
                <h2>{{title_why_us}}</h2>
                <h2>{{descr_why_us}}</h2>
            </div>
        </div>
        <div class="row wrap-why-us">
            {% for item in fact %}
            <div class="col item-fact">
                <div class="wrap-fact">
                    <div class="icon">
                        <img src="{{ item.img }}" alt="{{ item.img_alt }}">
                    </div>
                    <div class="text">
                        <p>{{ item.text_fact }}</p>
                    </div>
                </div>
            </div>
                {% if loop.index == 3 %}
                    <div class="w-100"></div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

<section id="promotion">
    <div class="container">
        <div class="row wrap-title justify-content-end">
            <div class="col-12 col-md-12 col-xl-11">
                <h2>{{title_promotion}}</h2>
                <h2>{{descr_promotion}}</h2>
            </div>
        </div>
        <div class="row all-card">
            {% for item in card %}
            <div class="col-12 col-lg-4">
                <div class="card-wrap">
                    <div class="card">
                        <div class="title-card">
                            <p>{{ item.title_card }}</p>
                        </div>
                        <div class="description-card">
                            <p>{{ item.descr_card }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<footer>
    <div class="container">
        <div class="row items justify-content-center align-items-center no-gutters">
            <div class="col-12 col-md-12 col-xl-12 item justify-content-center align-items-center">
                <div class="logo-footer">
                    <a href=""><img src="../img/logo.png" alt="WeDo"></a>
                    <div class="footer-phone">
                        <a href="{{ phone1_href }}">{{ phone1 }}</a>
                        <a href="{{ phone2_href }}">{{ phone2 }}</a>
                        <a href="{{ phone3_href }}">{{ phone3 }}</a>
                    </div>
                    <p>{{сopyright}}</p>
                </div>
            </div>
        </div>
    </div>
</footer>

<!-- Modal -->
<div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="container-fluid">
                    <div class="row justify-content-end">
                        <div class="col-2 justify-content-end">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <img src="{{path}}img/close.png" alt="">
                            </button>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-10">
                            <h3 class="modal-title" id="exampleModalLabel">{{ form_title }}</h3>
                        </div>
                    </div>
                    <div id="hidden-row" class="row">
                        <div class="modal-body">
                            <div class="container1">
                                <div class="card">
                                    <form id="callback-form">
                                        <div class="input-container">
                                            <input type="text" id="Username" name="Username" required>
                                            <label for="Username">{{ input_name }}</label>
                                            <div class="bar"></div>
                                        </div>
                                        <div class="input-container number">
                                            <input class="form-control bfh-phone" type="text" id="Phone" value=""
                                                   name="Phone" data-format="+380 (dd) ddd-dd-dd" required>
                                            <label for="Phone">{{ input_phone }}</label>
                                            <div class="bar"></div>
                                        </div>
                                        <div id="errorMessage" style="display: none">{{ error_mes }}</div>
                                        <div class="input-container">
                                            <select class="form-control" id="select" name="select" required>
                                                <option value="" disabled selected>{{ select_title }}</option>
                                                <option value="{{ select_item1 }}">{{ select_item1 }}</option>
                                                <option value="{{ select_item2 }}">{{ select_item2 }}</option>
                                                <option value="{{ select_item3 }}">{{ select_item3 }}</option>
                                            </select>
                                            <div class="bar"></div>
                                        </div>
                                        <div class="button-container">
                                            <div class="wrap-btn">
                                                <div class="button">
                                                    <button type="submit" class="btn"
                                                            data-wipe="{{ btn4 }}">{{ btn4 }}</button>
                                                    <!--<a href="" id="submit-btn" class="btn-pink" data-wipe="Отправить заявку">Отправить заявку</a>-->
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <p>{{ alert }}</p>
                </div>
                <div class="modal-footer">
                    <div class="wrap-btn">
                        <div class="button">
                            <a href="#" data-dismiss="modal" class="btn-pink" data-wipe="{{ btn5 }}">{{ btn5 }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- END Modal -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="js/main.js"></script>
</body>
</html>